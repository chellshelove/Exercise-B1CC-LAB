operator = eval(input("Please choose an operator(1. Addition, 2. Subtraction, 3. Multiplication or 4. Division:)" ))

number_1 = eval(input("Input the first number: "))
number_2 = eval(input("Input the second number: "))
if operator == 1:
    print("The result is:", number_1 + number_2)
elif operator == 2:
    print("The result is:", number_1 - number_2)
elif operator == 3:
    print("The result is:", number_1 * number_2)
elif operator == 4:
    print("The result is:", number_1 / number_2)